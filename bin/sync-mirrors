#! /bin/sh

CDIMAGE_ROOT=/srv/cdimage.no-name-yet.com
. "$CDIMAGE_ROOT/etc/config"

SECRET="$CDIMAGE_ROOT/secret"
if [ -d "$HOME/secret" ]; then
	SECRET="$HOME/secret"
fi

trigger () {
	echo "$1:"
	ssh -i "$SECRET/auckland" archvsync@"$1" sleep 1
}

trigger syncproxy.ubuntu.com
trigger auckland
trigger mirnyy.ubuntu.com
