#! /bin/sh

CDIMAGE_ROOT=/srv/cdimage.no-name-yet.com
. "$CDIMAGE_ROOT/etc/config"

cd "$CDIMAGE_ROOT/local/packages"
for arch in $ARCHES; do
	find pool/local -name "*_$arch.deb" -o -name '*_all.deb' > "../database/dists/${DIST}_local_binary-$arch.list"
	find pool/local -name "*_$arch.udeb" -o -name '*_all.udeb' > "../database/dists/${DIST}_local_debian-installer_binary-$arch.list"
done
apt-ftparchive generate apt-ftparchive.conf
