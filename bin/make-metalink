"""Create metalink files."""

import os
import sys

sys.path.insert(0, os.path.join(sys.path[0], os.pardir, "lib"))
from cdimage.config import config


def main():
    metalink_builder = os.path.join(config.root, "MirrorMetalink", "build.py")
    if os.path.exists(metalink_builder):
        os.execv(metalink_builder, [metalink_builder] + sys.argv[1:])
    else:
        sys.exit(1)
