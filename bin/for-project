"""Execute a subsidiary command in the context of a given project."""

from optparse import OptionParser
import os

# Be careful about the values here; in most cases they are passed to
# debian-cd, which will get upset if they contain a space, hence all the
# odd-looking hyphens.  ubuntu-zh_CN is an exception to this.
project_map = {
    "ubuntu": "Ubuntu",
    "ubuntu-zh_CN": "Ubuntu Chinese Edition",
    "kubuntu": "Kubuntu",
    "kubuntu-active": "Kubuntu-Active",
    "edubuntu": "Edubuntu",
    "xubuntu": "Xubuntu",
    "gobuntu": "Gobuntu",
    "ubuntu-server": "Ubuntu-Server",
    "jeos": "Ubuntu-JeOS",
    "ubuntu-mid": "Ubuntu-MID",
    "ubuntu-netbook": "Ubuntu-Netbook",
    "ubuntu-headless": "Ubuntu-Headless",
    "ubuntustudio": "Ubuntu-Studio",
    "mythbuntu": "Mythbuntu",
    "lubuntu": "Lubuntu",
    "ubuntukylin": "UbuntuKylin",
    "ubuntu-gnome": "Ubuntu-GNOME",
    "ubuntu-moblin-remix": "Ubuntu-Moblin-Remix",
    "livecd-base": "LiveCD-Base",
    "ubuntu-core": "Ubuntu-Core",
    "tocd3": "TheOpenCDv3",
    "tocd3.1": "TheOpenCDv3.1",
}


def main():
    parser = OptionParser(
        "%prog PROJECT [COMMAND ARGS...]\n"
        "Recognised projects:\n" +
        "\n".join("  %s" % project for project in sorted(project_map)))
    parser.disable_interspersed_args()
    _, args = parser.parse_args()
    if len(args) < 1:
        parser.error("need project")
    project = args[0]
    if project not in project_map:
        parser.error("unrecognised project '%s'" % project)
    os.environ["PROJECT"] = project
    os.environ["CAPPROJECT"] = project_map[project]
    if len(args) == 1:
        os.execl(os.environ.get("SHELL", "/bin/sh"), "-i")
    else:
        os.execvp(args[1], args[1:])


if __name__ == "__main__":
    main()
