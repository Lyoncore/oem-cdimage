#! /bin/sh
set -e

export ARCHES="${ARCHES:-amd64 hppa i386 ia64 powerpc}"

export CDIMAGE_ROOT=/srv/cdimage.no-name-yet.com
. "$CDIMAGE_ROOT/etc/config"

PATH="$CDIMAGE_ROOT/bin:${PATH:+:$PATH}"

# This is a special case; don't use for-project.
export PROJECT=livecd-base

if ! lockfile -l 7200 -r 0 "$CDIMAGE_ROOT/etc/.lock-build-image-set-$PROJECT"; then
	echo "Another image set is already building!" >&2
	exit 1
fi
trap "rm -f $CDIMAGE_ROOT/etc/.lock-build-image-set-$PROJECT" EXIT HUP INT QUIT TERM

IMAGE_TYPE=livecd-base
export CDIMAGE_DATE="$(next-build-date "$IMAGE_TYPE")"

if [ -z "$DEBUG" ]; then
	exec >"$CDIMAGE_ROOT/log/$PROJECT-$IMAGE_TYPE-$CDIMAGE_DATE.log" 2>&1
fi

echo "===== Downloading live filesystem images ====="
date
download-live-filesystems

if [ -z "$DEBUG" ]; then
	echo "===== Publishing ====="
	date
	publish-livecd-base "$CDIMAGE_DATE" "$IMAGE_TYPE"

	echo "===== Purging old images ====="
	date
	purge-old-images "$IMAGE_TYPE"

	echo "===== Triggering mirrors ====="
	date
	sync-mirrors
fi

echo "===== Finished ====="
date
