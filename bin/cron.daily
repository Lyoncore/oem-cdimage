#! /bin/sh
set -e

case $PROJECT in
	ubuntu-server)
		export ARCHES="${ARCHES:-amd64 i386 powerpc sparc}"
		;;
esac

export CDIMAGE_ROOT="${CDIMAGE_ROOT:-/srv/cdimage.ubuntu.com}"
. "$CDIMAGE_ROOT/etc/config"

PATH="$CDIMAGE_ROOT/bin:${PATH:+:$PATH}"

export CDIMAGE_INSTALL=1

build-image-set daily
