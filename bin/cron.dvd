"""Build a set of DVD images."""

from optparse import OptionParser
import os
import sys

sys.path.insert(0, os.path.join(sys.path[0], os.pardir, "lib"))
from cdimage.build import build_image_set
from cdimage.config import Config
from cdimage.livefs import run_live_builds


def main():
    parser = OptionParser("%prog")
    parser.add_option(
        "--live", default=False, action="store_true",
        help="build live filesystems first")
    options, _ = parser.parse_args()
    config = Config(IMAGE_TYPE="dvd")
    project = config.project
    series = config["DIST"]
    if project == "edubuntu":
        # Edubuntu lucid and onwards: DVD is live-only
        if series <= "karmic":
            config["CDIMAGE_INSTALL"] = "1"
    elif project == "ubuntu":
        # Ubuntu oneiric and onwards: DVD is live-only
        if series <= "natty":
            config["CDIMAGE_INSTALL"] = "1"
    elif project == "ubuntustudio":
        # Ubuntu Studio precise and onwards: DVD is live-only
        # (Actually, it didn't exist before then anyway, but we check this
        # just for documentation's sake.)
        if series <= "oneiric":
            config["CDIMAGE_INSTALL"] = "1"
    else:
        config["CDIMAGE_INSTALL"] = "1"
    config["CDIMAGE_LIVE"] = "1"
    config["CDIMAGE_DVD"] = "1"
    if options.live:
        if not run_live_builds(config):
            sys.exit(1)
    if not build_image_set(config):
        sys.exit(1)


if __name__ == "__main__":
    main()
