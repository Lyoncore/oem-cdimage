"""Calculate default architectures for a project/series/image-type."""

from __future__ import print_function

from optparse import OptionParser
import os
import sys

os.environ["CDIMAGE_INSIDE_DEFAULT_ARCHES"] = "1"

sys.path.insert(0, os.path.join(sys.path[0], os.pardir, "lib"))
from cdimage.config import config


def main():
    parser = OptionParser("%prog PROJECT IMAGE_TYPE DIST")
    _, args = parser.parse_args()
    if len(args) < 1:
        parser.error("need project")
    if len(args) < 2:
        parser.error("need image-type")
    if len(args) < 3:
        parser.error("need dist")

    if "ALL_DISTS" not in config:
        print("default-arches: ALL_DISTS not set!", file=sys.stderr)
        sys.exit(1)

    config["PROJECT"] = args[0]
    config["IMAGE_TYPE"] = args[1]
    config["DIST"] = args[2]
    arches = config.set_default_arches()
    if arches is not None:
        print(arches)


if __name__ == "__main__":
    main()
